#!/usr/bin/env bash
set -e

resolve_link() {
  $(type -p greadlink readlink | head -1) "$1"
}

abs_dirname() {
  local cwd="$(pwd)"
  local path="$1"

  while [ -n "$path" ]; do
    cd "${path%/*}"
    local name="${path##*/}"
    path="$(resolve_link "$name" || true)"
  done

  pwd
  cd "$cwd"
}

libexec_path="$(abs_dirname "$0")"
export _TICKET_ROOT="$(abs_dirname "$libexec_path")"
export PATH="${libexec_path}:$PATH"
export BUNDLE_GEMFILE="${libexec_path}/../Gemfile"

command="$1"
case "$command" in
"" | "-h" | "--help" )
  exec ticket-help
  ;;
* )
  command_path="$(command -v "ticket-$command" || true)"
  if [ ! -x "$command_path" ]; then
    echo "ticket: no such command \`$command'" >&2
    exit 1
  fi

  shift
  bundle exec "$command_path" "$@"
  ;;
esac
